<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="0.01"
    package="pt.up.fe.mobile" android:installLocation="preferExternal">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <application
        android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:theme="@style/Theme.IOSched"
        android:hardwareAccelerated="true">

        <!-- Activities for both phones and tablets -->

        <activity
            android:name=".ui.HomeActivity"
            android:theme="@style/Theme.IOSched.Home"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>

        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/Theme.IOSched.Home"
            android:noHistory="true"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
        	android:label="@string/title_printing"
        	android:name=".ui.studentservices.PrintActivity" 
            android:configChanges="orientation|keyboardHidden"/>

        <activity 
        	android:label="@string/title_printing"
        	android:name=".ui.studentservices.PrintRefActivity"
            android:configChanges="orientation|keyboardHidden" />
        	
        <activity
        	android:name=".ui.studentarea.ExamsActivity"
            android:label="@string/title_exams"
            android:configChanges="orientation|keyboardHidden"/>


        <activity
            android:name=".ui.SearchActivity"
            android:label="@string/title_search"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable" />
        </activity>

        <!-- Phone-only activities -->
        
        <activity
            android:name=".ui.studentarea.StudentAreaActivity"
            android:label="@string/title_student_area"
            android:configChanges="orientation|keyboardHidden" />
            
        <activity
           android:name=".ui.studentservices.StudentServicesActivity"
           android:label="@string/title_student_services"
           android:configChanges="orientation|keyboardHidden" />
           
        <activity
          android:name=".ui.map.MapActivity"
          android:label="@string/title_map"
          android:configChanges="orientation|keyboardHidden" />
                  
        <activity
          android:name=".ui.map.SettingsActivity"
          android:label="@string/title_settings"
          android:configChanges="orientation|keyboardHidden" />

        <activity
            android:name=".ui.studentarea.ScheduleActivity"
            android:label="@string/title_schedule"
            android:configChanges="orientation|keyboardHidden" />

        <activity
            android:name=".ui.friends.ProfileActivity"
            android:label="@string/title_friends"
            android:configChanges="orientation|keyboardHidden" />
         
        <activity
            android:name=".ui.news.NewsActivity"
            android:label="@string/title_news"
            android:configChanges="orientation|keyboardHidden" />   
            
        <activity
            android:name=".ui.news.NewsDescActivity"
            android:label="@string/title_news" 
            android:configChanges="orientation|keyboardHidden"/>   
        
        <activity
            android:name=".ui.friends.FriendsActivity"
            android:label="@string/title_friends"
            android:configChanges="orientation|keyboardHidden" />      
            
         
        <activity
            android:label="@string/title_tuition"
            android:name=".ui.tuition.TuitionActivity"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>
        
        <activity
            android:label="@string/title_tuition_history"
            android:name=".ui.tuition.TuitionHistoryActivity"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/title_tuition_menu" 
            android:name=".ui.tuition.TuitionMenuActivity"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>
        
        <activity
            android:label="@string/title_tuition_refs_list" 
            android:name=".ui.tuition.TuitionRefListActivity"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>
        
        <activity
            android:label="@string/title_tuition_ref_detail" android:name=".ui.tuition.TuitionRefDetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>


        <!-- Used for install referrer tracking -->
        <receiver
            android:name="com.google.android.apps.analytics.AnalyticsReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        
        <!-- Other manifest items -->

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ui.SearchActivity"
            android:configChanges="orientation|keyboardHidden"  />
        <activity 
            android:label="@string/title_search"
            android:name=".ui.StudentsSearchActivity"
            android:configChanges="orientation|keyboardHidden" />
        <activity 
            android:label="@string/title_subjects"
            android:name=".ui.studentarea.SubjectsActivity"
            android:configChanges="orientation|keyboardHidden" />
        <activity 
            android:label="@string/title_academic_path"
            android:name=".ui.studentarea.AcademicPathActivity"
            android:configChanges="orientation|keyboardHidden" />


    </application>
</manifest>
